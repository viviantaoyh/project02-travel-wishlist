<head>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <section class="form_container">
        <h1><%= destination.name%></h1>

        <br>
        <% if (destination.imageurl) { %>
            <div class="form-group image-container">
                <img src="<%= destination.imageurl%>" alt="image">
            </div>
        <% } %>

        <div class="form-group">
            <label>Target visit date:</label>
            <p><%= destination.targetvisitdate%></p>
        </div>

        <div class="form-group">
            <label>Duration:</label>
            <p><%= destination.duration%> days</p>
        </div>

        <div class="form-group">
            <label>Travel partner:</label>
            <p><%= destination.travelpartners%></p>
        </div>

        <div class="form-group">
            <label>Budget:</label>
            <p>$<%= destination.budget%></p>
        </div>

        <div class="form-group">
            <label>Travel highlights:</label>
            <p><%= destination.note%></p>
        </div>

        <br>
        <div class="btn-container">
            <form action="/destinations/<%= destination.id%>" method="post">
                <input type="hidden" name="_method" value="delete">
                <button>Delete</button>
            </form>
            <form action="/destinations/<%= destination.id%>/edit" method="get">
                <button>Edit</button>
            </form>
        </div>
        
    </section>
</body>
