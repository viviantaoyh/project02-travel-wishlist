<header>
    <link rel="stylesheet" href="/css/form.css">
</header>

<body>

    <section class="form_container">
        <h1>Edit Trip</h1>
    
        <form action="/destinations/<%= destination.id%>" method="post">
            <input type="hidden" name="_method" value="put">
            <label for="">Destination:</label>
            <input type="text" name="name" value="<%=destination.name%>">
            <br><br>
            <label for="">Image url:</label>
            <input type="text" name="image" value="<%=destination.imageurl%>">
            <br><br>
            <label for="">Target visit date (PLEASE KEY IN DATE AGAIN): </label>
            <input type="date" name="targetDate">
            <br><br>
            <label for="">Duration:</label>
            <input type="number" name="duration" value="<%=destination.duration%>">
            <br><br>
            <label for="">Travel Partner:</label>
            <select name="partner">
                <option value="Family">Family</option>
                <option value="Solo">Solo</option>
                <option value="Partner">Partner</option>
                <option value="Friends">Friends</option>
                <option value="Others">Others</option>
            </select>
            <br><br>
            <label for="">Budget:</label>
            <input type="number" name="budget" value="<%=destination.budget%>">
            <br><br>
            <label for="">Travel hightlights:</label>
            <br><br>
            <textarea name="note" id="" cols="30" rows="8"><%=destination.note%></textarea>
            <br><br><br>
            <button>Save</button>
        </form>
    </section>

</body>