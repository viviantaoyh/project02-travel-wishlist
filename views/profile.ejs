<head>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <section class="form_container">
        <h1>Profile</h1>
        <p>Edit to modify profile details or change password.</p>
        <br>

        <div class="form-group">
            <label>Name:</label>
            <p><%= user.fullname%></p>
        </div>

        <div class="form-group">
            <label>Email:</label>
            <p><%= user.email%></p>
        </div>

        <br>
        <div class="btn-container">
            <a href="/users/<%= user.userid%>/edit" class="btn-back">Edit</a>
            <a href="/dashboard" class="btn-back">Back to Dashboard</a>
        </div>
    </section>
</body>
